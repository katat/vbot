{
  "name": "vbot",
  "version": "2.0.10",
  "description": "A visual regression testing tool, aims to help developers quickly create tests with minimum overhead, avoid repeated clicks and typings in testings, particularly helpful for single page applications or complicated web app. Automate the testings `headlessly` at local dev environment or on a continuous integration server.",
  "main": "vbot",
  "scripts": {
    "lint:staged": "lint-staged",
    "lint:js": "eslint bin lib runner.js||true",
    "test": "mocha -t 15000 --full-trace --require babel-register"
  },
  "directories": {
    "test": "test"
  },
  "author": "kata.choi@gmail.com",
  "license": "MIT License",
  "dependencies": {
    "chromejs": "^0.3.1",
    "colors": "^1.1.2",
    "fs-extra": "^3.0.1",
    "get-port": "^3.1.0",
    "jimp": "^0.2.28",
    "jsonlint": "^1.6.2",
    "mkdirp": "^0.5.1",
    "shelljs": "^0.7.5",
    "yargs": "^3.21.0"
  },
  "bin": {
    "vbot": "./bin/run.js"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-eslint": "^7.2.0",
    "eslint": "^3.15.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "hapi": "^16.3.0",
    "http-server": "^0.9.0",
    "lint-staged": "^3.3.0",
    "pre-commit": "^1.2.2",
    "inert": "^4.2.0",
    "mocha": "^3.3.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended"
    ],
    "globals": {
      "module": true,
      "casper": true,
      "require": true,
      "console": true,
      "document": true,
      "localStorage": true,
      "sessionStorage": true,
      "fs": true,
      "process": true,
      "Promise": true,
      "setTimeout": true
    },
    "rules": {
      "no-console": 0
    }
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "lib/**/*.js": "eslint",
    "runner.js": "eslint",
    "bin/run.js": "eslint"
  }
}
